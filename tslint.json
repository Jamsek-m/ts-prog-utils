{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "semicolon": {
            "options": [
                "always"
            ]
        },
        "indent": {
            "options": [
                "spaces",
                4
            ]
        },
        "quotemark": [
            true,
            "double"
        ],
        "member-ordering": false,
        "no-console": false,
        "no-trailing-whitespace": false,
        "no-string-literal": false,
        "no-empty": false,
        "object-literal-sort-keys": false,
        "interface-name": false,
        "max-classes-per-file": false,
        "arrow-parens": false,
        "ordered-imports": false,
        "no-namespace": false,
        "variable-name": false,
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-separator",
                "check-type",
                "check-typecast",
                "check-module"
            ]
        }
    }
}
